{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ImageStore",
  "version": "0.2.0",
  "identifier": "com.imagestore.desktop",
  "build": {
    "frontendDist": "http://localhost:4321",
    "devUrl": "http://localhost:4321",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "ImageStore",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Medical",
    "resources": {
      "../dist/": "dist/"
    },
    "externalBin": ["binaries/node"]
  }
}
