---
import Layout from '../layouts/Layout.astro';
import CaseNumberInput from '../components/CaseNumberInput.svelte';
---

<Layout title="ImageSort">
	<div class="app">
		<header class="header">
			<h1 class="logo">ImageSort</h1>
		</header>

		<main class="main">
			<section class="form-panel">
				<div class="image-thumbnail">
					<div class="placeholder">No image</div>
				</div>

				<CaseNumberInput client:load />
			</section>
		</main>
	</div>
</Layout>

<style>
	.app {
		display: flex;
		flex-direction: column;
		height: 100vh;
	}

	.header {
		padding: 0.75rem 1.5rem;
		background: #fff;
		border-bottom: 1px solid #ddd;
	}

	.logo {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0;
		color: #2563eb;
	}

	.main {
		flex: 1;
		display: flex;
		overflow: hidden;
	}

	.form-panel {
		width: 400px;
		padding: 1.5rem;
		background: #fff;
		overflow-y: auto;
	}

	.image-thumbnail {
		width: 280px;
		height: 280px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #f0f0f0;
		border-radius: 4px;
		margin: 1rem auto 2rem auto;
	}

	.placeholder {
		color: #999;
		font-size: 0.75rem;
	}

	.form-group {
		margin-bottom: 1rem;
	}

	.form-group label {
		display: block;
		font-size: 0.875rem;
		font-weight: 500;
		color: #555;
		margin-bottom: 0.25rem;
	}

	.form-group input {
		width: 100%;
		padding: 0.5rem;
		border: 1px solid #ccc;
		border-radius: 4px;
		font-size: 0.9375rem;
	}

	.form-group input:focus {
		outline: none;
		border-color: #2563eb;
	}
</style>
