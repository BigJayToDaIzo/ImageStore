---
import Layout from '../layouts/Layout.astro';
import CaseNumberInput from '../components/CaseNumberInput.svelte';
import ImageSorter from '../components/ImageSorter.svelte';
---

<Layout title="ImageSort">
	<div class="app">
		<header class="header">
			<h1 class="logo">ImageSort</h1>
		</header>

		<main class="main">
			<ImageSorter client:load>
				<CaseNumberInput client:load />
			</ImageSorter>
		</main>
	</div>
</Layout>

<style>
	.app {
		display: flex;
		flex-direction: column;
		height: 100vh;
	}

	.header {
		padding: 0.75rem 1.5rem;
		background: #fff;
		border-bottom: 1px solid #ddd;
	}

	.logo {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0;
		color: #2563eb;
	}

	.main {
		flex: 1;
		display: flex;
		overflow: hidden;
	}
</style>
