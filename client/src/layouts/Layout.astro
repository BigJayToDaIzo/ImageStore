---
interface Props {
	title?: string;
}

const { title = "ImageStore" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html, body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: system-ui, -apple-system, sans-serif;
		background: #f5f5f5;
		color: #333;
	}

	astro-island {
		display: contents;
	}
</style>
